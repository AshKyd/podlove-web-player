{
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "$": true,
    "jQuery": true,
    "MediaElement": true
  },
  "rules": {
    "valid-jsdoc": 0,
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
    "consistent-this": 2,
    "no-space-before-semi": 1,
    "no-constant-condition": 1,
    "no-underscore-dangle": 2,
    "no-use-before-define": 1,
    "no-mixed-requires": 1,
    "no-multiple-empty-lines": [1, {"max": 1}],
    "func-style": [2, "declaration"],
    "max-params": [1, 3],
    "new-cap": 1,
    "new-parens": 2,
    "no-ternary": 1,
    "no-unused-vars": [2, {"vars": "local"}],
    "quotes": [1, "single"],
    "space-infix-ops": 1,
    "global-strict": [2, "always"],
    "strict": 0,
    "no-extra-strict": 2,
    "block-scoped-var": 1
  }
}
